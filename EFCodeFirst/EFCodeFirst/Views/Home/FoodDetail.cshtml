@*@model EFCodeFirst.AllDTO*@
@model YemekSepeti.Models.DTO.AllDTO

@{
    ViewBag.Title = "FoodDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div style="margin-top:20px" class="container-fluid py-5">
        <div class="row px-xl-5">
            <div class="col-lg-4 pb-5">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    @*<div class="carousel-inner border">*@
                        <div class="carousel-item active">
                            <img @*class="w-100 h-100"*@ style="width:100%; width:100%;" src="@Model.FoodDetailPageFoodDTO.Images" alt="Image">
                        </div>
                        @*<div class="carousel-item">
                                <img class="w-100 h-100" src="img/product-2.jpg" alt="Image">
                            </div>*@
                    @*</div>*@
                    @*<a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                            <i class="fa fa-2x fa-angle-left text-dark"></i>
                        </a>
                        <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                            <i class="fa fa-2x fa-angle-right text-dark"></i>
                        </a>*@
                </div>
            </div>
            <div class="col-lg-7 pb-5">
                <a href="/Home/RestaurantDetail/@Model.FoodDetailPageFoodDTO.RestaurantId"><h3 class="font-weight-semi-bold">@Model.FoodDetailPageFoodDTO.FoodRestaurantName</h3></a>
                <h1 class="font-weight-semi-bold">@Model.FoodDetailPageFoodDTO.Name</h1>
                <h3 class="font-weight-semi-bold mb-4">@Model.FoodDetailPageFoodDTO.Price₺</h3>
                <h5 class="mb-4">@Model.FoodDetailPageFoodDTO.Description</h5>
                <div class="d-flex align-items-center mb-4 pt-2">
                    @*<div class="input-group quantity mr-3" style="width: 130px;">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-minus">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <input type="text" class="form-control bg-secondary text-center" value="1">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-plus">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>*@
                    <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i>Sepete Ekle</button>
                </div>
            </div>
        </div>
        <h4 class="font-weight-semi-bold mb-4" style="margin-top:30px;margin-left:50px;">@Model.FoodDetailPageFoodDTO.CategoryName kategorisindeki diğer yemekler</h4>
        <div style="margin-top:10px;margin-left:25px;" class="row pb-5">

            @*col-lg-4 col-md-6 col-sm-12*@
            @foreach (var item in Model.FoodDTO)
            {
                <div style="margin-left:25px;" class="pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img style='width:290px;height:290px' @*class="img-fluid w-100"*@ src="@item.Images">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h5 class="text-truncate mb-3">@item.FoodRestaurantName</h5>
                            <h6 class="text-truncate mb-3">@item.Name</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@item.Price</h6><h6 class="text-muted ml-2"></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/Home/FoodDetail/@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Ürün Detayı</a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete Ekle</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</body>
