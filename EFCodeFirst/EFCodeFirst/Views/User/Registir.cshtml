
@{
    ViewBag.Title = "Registir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-image: url('https://t4.ftcdn.net/jpg/02/92/74/19/360_F_292741930_eODxgfFT41CRil8eOww1o2UWX0Ers7kM.jpg'); width: 100%; " class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px;"></div>
</div>
<div class="text-center mb-4">
    <h3 class="section-title px-5"><span class="px-2">Kayıt Ol</span></h3>
</div>
<div style="margin-top:-60px" class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-3 mb-5"></div>
        <div class="col-lg-6 mb-5">
            <div class="contact-form">
                <div name="sentMessage" id="contactForm" novalidate="novalidate">
                    <p style="color:red" id="registirError"></p>
                    <div class="control-group">
                        <p>
                            Kullanıcı Adı
                            <input type="text" class="form-control" id="name" placeholder="Kullanıcı Adı" />
                        </p>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <p>
                            Email
                            <input type="email" class="form-control" id="email" placeholder="E-Mail" />
                        </p>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <p>
                            Şifre
                            <input type="password" class="form-control" id="password" placeholder="Şifre" />
                        </p>
                        <p class="help-block text-danger"></p>
                    </div>
                    <button class="btn btn-primary py-2 px-4" type="button">Kayıt Ol</button>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-5"></div>
    </div>
</div>

<script src="~/Assets/js/javascript/registir.js"></script>
